<div class="container">
        <div class="row">
            <div class="col-xs-12 text-center" id="top-bar">
                
                <h1>It's Time To Chow Down! </h1>
         

    <div class="container">
            <div class="row" id="headers">
                <div class="col-6"><h2>Place Your Order Here</h2></div>
                <div class="col-6"><h2>Finished Orders</h2></div>
            </div>
            <li>
                    <button type="submit" class="btn btn-danger delete-order" data-id="{{id}}">Devoured!</button>
                    <button type="submit" class="btn btn-success complete-order" data-id="{{id}}">Order Complete</button>
                    </li>
                    <br>
        </div>
    <br>
        <div class="col-12"><h3>Enter Your Order Here:</h3></div>
        <div class="container">
            <div class="row">
                <div class="col-4">
                    <br>
                    <ul> 
                        {{#each orders}}
                            {{#unless complete}}
                             
                            {{/unless}}
                        {{/each}}
                    </ul>
                </div>
                <div class="col-4">
                    
                    <form>
                        <div class="form-group">
                            <label><strong>Order:</strong></label>
                            <textarea class="form-control" id="order"></textarea>
                            <button type="submit" class="btn btn-primary">Submit</button>
                        </div>
                    </form>
                </div>
                <div class="col-4">
                    
                    <br>
                    <ul>
                        {{#each orders}}
                            {{#if complete}}
                                <li>
                                <h5>Order #: {{id}}</h5>
                                <p><strong>{{fullorder}}</strong></p>
                                </li>
                                <br>
                            {{/if}}
                        {{/each}}
                    </ul>
                </div>
            </div>
        </div>